<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
            <item android:bottom="5px" android:top="5px" android:left="5px" android:right="5px">
                <shape android:shape="rectangle" >
                    <solid android:color="@color/violet_light" />
                    <corners android:radius="60dp" />
                    <stroke android:width="2px" android:color="@color/violet_light" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
            <item android:bottom="5px" android:top="5px" android:left="5px" android:right="5px">
                <shape android:shape="rectangle" >
                    <solid android:color="@color/violet_medium" />
                    <corners android:radius="60dp" />
                    <stroke android:width="2px" android:color="@color/violet_medium" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
            <item android:bottom="5px" android:top="5px" android:left="5px" android:right="5px">
                <shape android:shape="rectangle" >
                    <solid android:color="@color/violet_light" />
                    <corners android:radius="60dp" />
                    <stroke android:width="2px" android:color="@color/violet_light" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item >
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
            <item android:bottom="5px" android:top="5px" android:left="5px" android:right="5px">
                <shape android:shape="rectangle" >
                    <solid android:color="@color/violet_medium" />
                    <corners android:radius="60dp" />
                    <stroke android:width="2px" android:color="@color/violet_medium" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>